<!-- Validation failure messages -->
<% if @resident.errors.any? %>
  <% @resident.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Resident</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_resident" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for apartment_id -->
      <div class="form-group">
        <label for="apartment_id" class="control-label">
          Apartment
        </label>

        <%= select_tag(:apartment_id, options_from_collection_for_select(Apartment.all, :id, :apartment_number, @resident.apartment_id), :class => "form-control") %>
      </div>

      <!-- Label and input for phone_number -->
      <div class="form-group">
        <label for="phone_number" class="control-label">
          Phone number
        </label>

        <input type="text" id="phone_number" name="phone_number" placeholder="Phone number" class="form-control" value="<%= @resident.phone_number %>">
      </div>

      <!-- Label and input for email_address -->
      <div class="form-group">
        <label for="email_address" class="control-label">
          Email address
        </label>

        <input type="text" id="email_address" name="email_address" placeholder="Email address" class="form-control" value="<%= @resident.email_address %>">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @resident.name %>">
      </div>

      <button class="btn btn-success">
        Create Resident
      </button>
      or
      <a href="/residents">Cancel</a>
    </form>
  </div>
</div>
