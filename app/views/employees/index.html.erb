<div class="page-header">
  <h1>
    Employees
    <a href="/employees/new" class="btn btn-lg btn-success">New Employee</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @employees.each do |employee| %>
      <tr>
        <td>
          <% if employee.user.present? %>
            <a href="/users/<%= employee.user.id %>">
              <%= employee.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/employees/<%= employee.id %>" class="btn btn-primary">Show</a>
          <a href="/employees/<%= employee.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_employee/<%= employee.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @employees, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
